block nav
    div.navbar.navbar-inverse.navbar-fixed-top
        div.navbar-inner
            div.container
                a.btn.btn-navbar( data-toggle="collapse", data-target=".nav-collapse")
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.brand( href="#") fast-node-io
                div.nav-collapse.collapse
                    ul.nav
                        li.active
                            a(href="/") Home
                        li
                            a(href="/about") About
                    form.navbar-form.pull-right(action="/login", method="POST")
                        if session.user
                            div.btn
                                a.dropdown-toggle.pull-right(href="#",data-toggle="dropdown") My Profile
                                    b.caret
                                ul.dropdown-menu.pull-right
                                    li
                                        a(href="/upload") Upload picture
                                    li
                                        a(href="/profile") My Profile
                                    li
                                        a(href="/settings") Settings
                                    li.divider
                                    li
                                        a(href="/logout") Logout
                        else
                            input.span2( type="text", name="mail", placeholder="Email")
                            input.span2( type="password",name="password", placeholder="Password")
                            button.btn( type="submit") Sign in
                            a.btn(href="/register") Register

