extends layout
block content
    div.row
        div.span4
        div.span7

            - if(isDisabled == "false")

                form.form-horizontal(method="POST", action="/register")
                    div.control-group

                    lable.control-label Email:
                    div.controls
                        input(type="text", name="mail", placeholder="Email", value=user)
                    lable.control-label Password:
                    div.controls
                        input(type="password", name="pwd", placeholder="Password", value=pwd)

                    - if (errorInfo)
                        div.span6.alert
                            button.close(type="button", data-dismiss="alert") &times;
                            span()= errorInfo

                    div.row
                        div.span3
                            button.btn Register

            - else
                - if (errorInfo)
                    div.span6.alert
                        button.close(type="button", data-dismiss="alert") &times;
                        span()= errorInfo


                a.btn(href='/') Back to start page







